{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <h1>Livres</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.genre }}</td>
                <td>
                    <a href="{{ path('books_show', {slug: book.slug}) }}" class="btn btn-info btn-sm">Voir</a>
                    {% if app.user == book.user or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('books_edit', {slug: book.slug}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <form method="post" action="{{ path('books_delete', {slug: book.slug}) }}" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                            <button class="btn btn-danger btn-sm" onclick="return confirm('Supprimer ce livre ?');">Supprimer</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
